{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "baseUrl": ".",
    "removeComments": true
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "dist"]
}
